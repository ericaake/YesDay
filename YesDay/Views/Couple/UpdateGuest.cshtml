@model CoupleUpdateGuestlistVM
@{
    ViewData["Title"] = "YesDay - Uppdatera gäst";
}

<h3>Uppdatera gäst</h3>

<form asp-controller="Couple" asp-action="UpdateGuest" method="post">
    <p class="obligatorisk">(* = Obligatoriska fält)</p>
    <div class="row">
        <div class="col-3">
            <label asp-for="Firstname"></label>
        </div>
        <div class="col-3">
            <input asp-for="Firstname" />
            <span asp-validation-for="Firstname"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-3">
            <label asp-for="Lastname"></label>
        </div>
        <div class="col-3">
            <input asp-for="Lastname" />
            <span asp-validation-for="Lastname"></span>
        </div>
    </div>
    <div class="row">

        <div class="col-3">
            <label asp-for="Address"></label>
        </div>
        <div class="col-3">
            <input asp-for="Address" />
        </div>
    </div>
    <div class="row">

        <div class="col-3">
            <label asp-for="Email"></label>

        </div>
        <div class="col-3">
            <input asp-for="Email" />
            <span asp-validation-for="Email"></span>
        </div>

    </div>
    <div class="row">

        <div class="col-3">
            <label asp-for="InvitedBy"></label>

        </div>
        <div class="col-3">
            <input asp-for="InvitedBy" />
        </div>

    </div>
    <div class="row">

        <div class="col-3">
            <label asp-for="GuestTitle"></label>
        </div>
        <div class="col-3">
            <input asp-for="GuestTitle" />
        </div>
    </div>
    <div class="row">

        <div class="col-3">
            <label asp-for="WeddingCrewTitle"></label>

        </div>
        <div class="col-3">
            <input asp-for="WeddingCrewTitle" />
        </div>

    </div>
    <div class="row">

        <div class="col-3">
            <label asp-for="GuestStatus"></label>

        </div>
        <div class="col-3">
            <select asp-for="SelectedRsvp" asp-items="Model.GuestStatus" />
        </div>

    </div>
    <div class="row">

        <div class="col-3">
            <label asp-for="FoodPreference"></label>

        </div>
        <div class="col-3">
            <input asp-for="FoodPreference"/>
        </div>

    </div>
    <div class="row">

        <div class="col-3">
            <label asp-for="GuestNote"></label>

        </div>
        <div class="col-3">
            <textarea asp-for="GuestNote" rows="8"></textarea>
        </div>

    </div>

    <input class="btn btn-light" type="submit" value="Spara" />
</form>
 <a asp-controller="Couple" asp-action="Guestlist">Avbryt</a>
