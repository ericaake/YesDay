@model (CoupleExpenseVM[], CoupleBudgetVM)
@{
    ViewData["Title"] = "Expense";
}
<div class="container">

    <div class="row">
        <div class="col">
            <h3>Budget</h3>
        </div>
        <div>
            Total budget: @Convert.ToInt32(Model.Item2.TotalBudget) 
            Totala utgifter: @Convert.ToInt32(Model.Item2.SumExpenses)
        </div>
    </div>

    <div class="row">
        <div class="col">
            <a href="/couple/addexpense"><input class="btn btn-light" type="submit" value="Lägg till"></a>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Post</th>
                        <th scope="col">Kostnad</th>
                        <th scope="col"></th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Item1)
                    {
                        <tr>
                            <td>@item.Item</td>
                            <td>@Convert.ToInt32(item.ActualCost)</td>
                            <td> <a asp-controller="Couple" asp-action="UpdateExpense" asp-route-id="@item.Id">Uppdatera</a></td>
                            @*<td> <a asp-controller="Couple" asp-action="DeleteExpense" asp-route-id="@item.Id" method="post">Ta bort</a></td>*@
                            <td> 
                            <form asp-controller="Couple" asp-action="DeleteExpense" asp-route-id="@item.Id">
                                <input type="submit" class="btn btn-light" value="Ta bort" />
                            </form>
                                </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

